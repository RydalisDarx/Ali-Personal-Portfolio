                    source(src="../vid/spellbook.webm" type="video/webm")
                    source(src="../vid/spellbook.mp4" type="video/mp4")
                    img(src="../img/Spellbook/spellbook_thumb.JPG" title="Your browser does not support mov, webm, or mp4 formats")
